package views

import (
    "github.com/Z3DRP/Portfolio/internal/components/navbar"
    "github.com/Z3DRP/Portfolio/internal/components/footer"
)

temple Zroot() {
    <!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width-device-width, initial-scale=1.0">
            <meta http-equiv="X-UA-COMPATIBLE">
            <title>Zach Palmer portfolio 2024</title>
            <link rel="icon" href="/assets/favicon_io/favicon-32x32.png" type="image/x-icon">
            <script src="/assets/zhtmx/htmx.min.js"></script>
        </head>
        <body>
            <header>
                {{ template "navbar" . }}
            </header>
            <main id="portfolio-content">
                // { children... }
                {{ . }}
            </main>
            <footer>
                {{ template "footer" . }}
            </footer>
        </body>
    </html>
}