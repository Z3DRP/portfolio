package components
import (
    "github.com/Z3DRP/portfolio/internal/models"
    )

templ Schedule(mySchedule models.TaskSchedule) {
    <article id="schedule-container">
        <section id="schedule-body">
            <table>
                for dayIndx, days := range mySchedule {
                    <tr id={ dayIndx }>
                        
                    </tr>
                }
            </table>
            for dayIndx, task := range myTasks {
                <div id={ dayIndx }>
                    <h5>{ task.Weekday() }</h5>
                    <p></p>
                </div>
            }
        </section>
        <section id="schedule-footer">
            <button>Previous</button>
            <button>Next</button>
        </section>
    </article>
}